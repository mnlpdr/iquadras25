<div class="container">
  <h1 class="text-center my-4">Donos de Quadras</h1>

  <a href="<%= new_court_owner_path %>" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Novo Dono de Quadra
  </a>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @court_owners.each do |court_owner| %>
        <tr>
          <td><%= court_owner.name %></td>
          <td><%= court_owner.email %></td>
          <td><%= court_owner.phone_number %></td>
          <td>
            <a href="<%= court_owner_path(court_owner) %>" class="btn btn-info btn-sm">
              <i class="bi bi-eye"></i> Ver
            </a>
            <a href="<%= edit_court_owner_path(court_owner) %>" class="btn btn-warning btn-sm">
              <i class="bi bi-pencil"></i> Editar
            </a>
            <%= link_to "Excluir", court_owner, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Tem certeza?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
