<div class="container mt-4" data-controller="court-search">
  <h1 class="mb-4">
    <% if current_user.court_owner? %>
      Minhas Quadras
    <% else %>
      Quadras Disponíveis
    <% end %>
  </h1>

  <% if @sports.any? %>
    <div class="card mb-4">
      <div class="card-body">
        <div class="row align-items-end">
          <div class="col-md-6">
            <label class="form-label">Buscar quadra</label>
            <input type="text" 
                   class="form-control" 
                   placeholder="Digite o nome ou localização"
                   data-court-search-target="input"
                   data-action="input->court-search#filter">
          </div>
          <div class="col-md-6">
            <%= select_tag :sport_id,
                options_from_collection_for_select(@sports, :id, :name, params[:sport_id]),
                prompt: "Todos os esportes",
                class: "form-select",
                data: {
                  court_search_target: "sportSelect",
                  action: "change->court-search#filter"
                } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% if current_user.admin? || current_user.court_owner? %>
    <%= link_to new_court_path, class: "btn btn-primary mb-4" do %>
      <i class="bi bi-plus-circle"></i> Nova Quadra
    <% end %>
  <% end %>

  <div class="row" data-court-search-target="courtsList">
    <% @courts.each do |court| %>
      <div class="col-md-4 mb-4" data-court-name="<%= court.name.downcase %>" data-court-location="<%= court.location.downcase %>" data-court-sports="<%= court.sports.pluck(:id).join(',') %>">
        <div class="card h-100 shadow-sm">
          <!-- Exibir foto da quadra ou imagem padrão -->
          <% if court.has_photo? %>
            <%= image_tag court.photo, class: "card-img-top", style: "height: 200px; object-fit: cover;", alt: court.name %>
          <% else %>
            <%= image_tag "default_court.jpg", class: "card-img-top", style: "height: 200px; object-fit: cover;", alt: "Imagem padrão" %>
          <% end %>
          
          <div class="card-body">
            <h5 class="card-title"><%= court.name %></h5>
            <p class="card-text"><i class="bi bi-geo-alt"></i> <%= court.location %></p>
            <p class="card-text"><i class="bi bi-people"></i> Capacidade: <%= court.capacity %> pessoas</p>
            <p class="card-text"><i class="bi bi-cash"></i> R$ <%= number_to_currency(court.price_per_hour) %>/hora</p>
            
            <% if court.sports.any? %>
              <p class="card-text">
                <i class="bi bi-trophy"></i> 
                <%= court.sports.pluck(:name).join(", ") %>
              </p>
            <% end %>
            
            <div class="d-flex justify-content-between align-items-center mt-3">
              <%= link_to court_path(court), class: "btn btn-info" do %>
                <i class="bi bi-eye"></i> Ver Detalhes
              <% end %>

              <% if current_user.client? %>
                <%= link_to new_reservation_path(court_id: court.id), class: "btn btn-success" do %>
                  <i class="bi bi-calendar-plus"></i> Reservar
                <% end %>
              <% end %>

              <% if can? :edit, court %>
                <%= link_to edit_court_path(court), class: "btn btn-warning" do %>
                  <i class="bi bi-pencil"></i> Editar
                <% end %>
              <% end %>

              <% if can? :destroy, court %>
                <%= button_to court_path(court), 
                      method: :delete, 
                      class: "btn btn-danger",
                      data: { confirm: "Tem certeza que deseja excluir esta quadra?" } do %>
                  <i class="bi bi-trash"></i> Excluir
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @courts.empty? %>
    <div class="alert alert-info mt-4">
      <% case current_user.role %>
      <% when 'admin' %>
        Não há quadras cadastradas no sistema.
      <% when 'court_owner' %>
        Você ainda não cadastrou nenhuma quadra.
      <% else %>
        Não há quadras disponíveis no momento.
      <% end %>
    </div>
  <% end %>
</div>
