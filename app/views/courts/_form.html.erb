<%= form_for @court do |f| %>
  <% if @court.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@court.errors.count, "erro") %> encontrado:</h2>
      <ul>
        <% @court.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nome", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :location, "Localização", class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :capacity, "Capacidade", class: "form-label" %>
    <%= f.number_field :capacity, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :price_per_hour, "Preço por Hora", class: "form-label" %>
    <%= f.number_field :price_per_hour, step: :any, class: "form-control" %>
  </div>

  <% if @sports.any? %>
    <div class="mb-3">
      <label class="form-label">Esportes Disponíveis</label>
      <div class="row">
        <% @sports.each do |sport| %>
          <div class="col-md-4 mb-2">
            <div class="form-check">
              <%= check_box_tag "court[sport_ids][]", sport.id, 
                  @court.sports.include?(sport), 
                  id: "court_sport_#{sport.id}",
                  class: "form-check-input" %>
              <%= label_tag "court_sport_#{sport.id}", sport.name, class: "form-check-label" %>
            </div>
          </div>
        <% end %>
      </div>
      <%= hidden_field_tag "court[sport_ids][]", nil %>
    </div>
  <% end %>

  <% if current_user.admin? %>
    <div class="mb-3">
      <%= f.label :owner_id, "Dono da Quadra", class: "form-label" %>
      <%= f.collection_select :owner_id, 
                            User.where(role: :court_owner), 
                            :id, 
                            :name, 
                            { prompt: "Selecione o dono da quadra" }, 
                            { class: "form-select", required: true } %>
    </div>
  <% end %>

  <%= f.submit "Salvar Quadra", class: "btn btn-primary" %>
  <%= link_to "Voltar", courts_path, class: "btn btn-secondary" %>
<% end %>
