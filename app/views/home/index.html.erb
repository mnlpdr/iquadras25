<div class="container mt-5">
  <h1 class="text-center">Bem-vindo ao iQuadras!</h1>
  <p class="text-center lead">Gerencie suas reservas e quadras com facilidade.</p>

  <% if user_signed_in? %>
    <div class="alert alert-success text-center">
      <h4>Olá, <%= current_user.email %>!</h4>
      <p>Você está logado. Acesse rapidamente as seções abaixo:</p>
    </div>

    <div class="container">
      <div class="row gy-4 mt-4">
        <!-- Reservas (Disponível para todos os usuários logados) -->
        <div class="col-md-6 d-flex">
          <div class="card text-center shadow flex-fill d-flex flex-column">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title">Reservas</h5>
                <p class="card-text mb-4">Gerencie suas reservas facilmente.</p>
              </div>
              <a href="<%= reservations_path %>" class="btn btn-primary mt-auto">Ver Reservas</a>
            </div>
          </div>
        </div>

        <!-- Quadras (Clientes podem ver todas, Donos podem ver apenas as suas, Admin pode gerenciar todas) -->
        <% if current_user.client? %>
          <div class="col-md-6 d-flex">
            <div class="card text-center shadow flex-fill d-flex flex-column">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title">Quadras</h5>
                  <p class="card-text mb-4">Visualize quadras disponíveis.</p>
                </div>
                <a href="<%= courts_path %>" class="btn btn-primary mt-auto">Ver Quadras</a>
              </div>
            </div>
          </div>
        <% end %>

        <% if current_user.court_owner? %>
          <div class="col-md-6 d-flex">
            <div class="card text-center shadow flex-fill d-flex flex-column">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title">Minhas Quadras</h5>
                  <p class="card-text mb-4">Gerencie suas próprias quadras.</p>
                </div>
                <a href="<%= courts_path %>" class="btn btn-primary mt-auto">Ver Minhas Quadras</a>
              </div>
            </div>
          </div>
        <% end %>

        <% if current_user.admin? %>
          <div class="col-md-6 d-flex">
            <div class="card text-center shadow flex-fill d-flex flex-column">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title">Gerenciar Quadras</h5>
                  <p class="card-text mb-4">Visualize e edite todas as quadras.</p>
                </div>
                <a href="<%= courts_path %>" class="btn btn-primary mt-auto">Ver Quadras</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 d-flex">
            <div class="card text-center shadow flex-fill d-flex flex-column">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title">Clientes</h5>
                  <p class="card-text mb-4">Gerencie os clientes cadastrados.</p>
                </div>
                <a href="<%= admin_clients_path %>" class="btn btn-primary mt-auto">Ver Clientes</a>
              </div>
            </div>
          </div>

          <div class="col-md-6 d-flex">
            <div class="card text-center shadow flex-fill d-flex flex-column">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title">Donos de Quadras</h5>
                  <p class="card-text mb-4">Gerencie os donos de quadras.</p>
                </div>
                <a href="<%= admin_court_owners_path %>" class="btn btn-primary mt-auto">Ver Donos de Quadras</a>
              </div>
            </div>
          </div>

          <!-- Card de Logs de Notificações (apenas para admin) -->
          <div class="col-md-6 d-flex">
            <div class="card text-center shadow flex-fill d-flex flex-column">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <h5 class="card-title">Logs de Notificações</h5>
                  <p class="card-text mb-4">Monitore todas as notificações enviadas pelo sistema.</p>
                </div>
                <%= link_to admin_notification_logs_path, class: "btn btn-primary mt-auto" do %>
                  <i class="bi bi-list-check"></i> Ver Logs
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center mt-4">
      <a href="<%= new_user_session_path %>" class="btn btn-success btn-lg">Faça Login</a>
    </div>
  <% end %>
</div>
