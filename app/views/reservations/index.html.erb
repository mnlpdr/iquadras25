<div class="container">
  <h1 class="text-center my-4">Reservas</h1>

  <a href="<%= new_reservation_path %>" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nova Reserva
  </a>

  <ul class="list-group">
    <% @reservations.each do |reservation| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <strong><%= reservation.court.name %></strong> - 
        <%= l(reservation.date, format: :long) %>
        <%= button_to "Excluir", reservation_path(reservation), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Tem certeza?" } %>
      </li>
    <% end %>
  </ul>
</div>