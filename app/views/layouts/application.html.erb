<!DOCTYPE html>
<html>
<head>
  <title>iQuadras</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>

  <!-- Adicionando Bootstrap via CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Bootstrap Icons (Opcional) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  <!-- Carregue o Stripe.js apenas uma vez, aqui no layout principal -->
  <script src="https://js.stripe.com/v3/"></script>
</head>
<body class="bg-light">
  <% if user_signed_in? && current_user.admin? %>
    <div data-controller="health">
      <a href="/health" target="_blank">
        <div data-health-target="indicator" class="health-indicator bg-success" 
             title="Sistema funcionando normalmente"></div>
      </a>
    </div>

    <style>
      .health-indicator {
        position: fixed;
        top: 10px;
        right: 10px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        z-index: 9999;
        cursor: pointer;
        transition: transform 0.2s;
      }
      .health-indicator:hover {
        transform: scale(1.5);
      }
    </style>
  <% end %>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">iQuadras</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="<%= root_path %>">Home</a></li>

        <% if user_signed_in? %>
          <li class="nav-item"><a class="nav-link" href="<%= reservations_path %>">Reservas</a></li>

          <% if current_user.client? %>
            <li class="nav-item"><a class="nav-link" href="<%= courts_path %>">Quadras</a></li>
          <% end %>

          <% if current_user.court_owner? %>
            <li class="nav-item"><a class="nav-link" href="<%= courts_path %>">Minhas Quadras</a></li>
          <% end %>

          <% if current_user.admin? %>
            <li class="nav-item"><a class="nav-link" href="<%= courts_path %>">Quadras</a></li>
            <li class="nav-item"><a class="nav-link" href="<%= admin_clients_path %>">Clientes</a></li>
            <li class="nav-item"><a class="nav-link" href="<%= admin_court_owners_path %>">Donos de Quadras</a></li>
            <li class="nav-item"><a class="nav-link" href="<%= admin_notification_logs_path %>">Logs de Notificações</a></li>
          <% end %>

          <li class="nav-item">
            <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "btn btn-danger text-white nav-link", form: { class: "d-inline-block" } %>
          </li>
        <% else %>
          <li class="nav-item"><a class="nav-link btn btn-primary text-white" href="<%= new_user_session_path %>">Entrar</a></li>
        <% end %>
      </ul>
    </div>
  </div>
  </nav>


  <div class="container mt-4">
    <%= render 'shared/flash' %>
    <%= yield %>
  </div>

  <footer class="text-center py-3">
    <p>&copy; 2025 iQuadras. Todos os direitos reservados.</p>
  </footer>
</body>
</html>
