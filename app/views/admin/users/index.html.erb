<div class="container mt-4">
  <h1><%= params[:role].titleize.pluralize %></h1>

  <div class="mb-3">
    <%= link_to "Novo #{params[:role].titleize}", 
        params[:role] == "client" ? new_admin_client_path : new_admin_court_owner_path, 
        class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_number %></td>
            <td>
              <%= link_to "Ver", 
                  params[:role] == "client" ? admin_client_path(user) : admin_court_owner_path(user), 
                  class: "btn btn-info btn-sm" %>
              <%= link_to "Editar", 
                  params[:role] == "client" ? edit_admin_client_path(user) : edit_admin_court_owner_path(user), 
                  class: "btn btn-warning btn-sm" %>
              <%= button_to "Excluir", 
                  params[:role] == "client" ? admin_client_path(user) : admin_court_owner_path(user), 
                  method: :delete, 
                  class: "btn btn-danger btn-sm",
                  form: { style: 'display: inline-block' },
                  data: { confirm: "Tem certeza?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
