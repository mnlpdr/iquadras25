<div class="container">
  <h1 class="text-center my-4">Clientes</h1>

  <a href="<%= new_client_path %>" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Novo Cliente
  </a>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= client.email %></td>
          <td><%= client.phone_number %></td>
          <td>
            <a href="<%= client_path(client) %>" class="btn btn-info btn-sm">
              <i class="bi bi-eye"></i> Ver
            </a>
            <a href="<%= edit_client_path(client) %>" class="btn btn-warning btn-sm">
              <i class="bi bi-pencil"></i> Editar
            </a>
            <%= link_to "Excluir", client_path(client), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Tem certeza?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
