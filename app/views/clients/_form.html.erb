<%= form_with(model: client, local: true, class: "needs-validation") do |f| %>
    <% if client.errors.any? %>
      <div class="alert alert-danger">
        <h4>Erros encontrados:</h4>
        <ul>
          <% client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= f.label :name, "Nome", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= f.label :phone_number, "Telefone", class: "form-label" %>
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= f.label :address, "EndereÃ§o", class: "form-label" %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
  
    <div class="mb-3">
      <%= f.label :birthdate, "Data de nascimento", class: "form-label" %>
      <%= f.date_select :birthdate, {}, { class: "form-control" } %>
    </div>
  
    <div class="d-flex justify-content-between">
      <%= link_to "Cancelar", clients_path, class: "btn btn-secondary" %>
      <%= f.submit "Salvar", class: "btn btn-success" %>
    </div>
  <% end %>
  